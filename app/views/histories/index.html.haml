%h1 Listing Histories

.col-md-8.well
  .table-responsive
    %table.table-hover.completed-table
      %thead
        %tr
          %th Name
          %th Date of Admission
          %th MR Number
          %th
          %th
          %th
          %th
          %th
          %th

      %tbody
        - @histories.each do |history|
          %tr
            %td= history.patient.name
            %td= history.date_of_admission
            %td= history.mr_number
            %td= link_to 'View History', patient_history_path(@patient, history), :class => "btn btn-primary"
            %td= link_to 'Show Labs', patient_history_labs_path(@patient, history), :class => "btn btn-primary"
            %td= link_to 'Show Orders', patient_history_orders_path(@patient, history), :class => "btn btn-primary"
            %td= link_to 'Show MAR', patient_history_mars_path(@patient, history), :class => "btn btn-primary"
            %td= link_to 'Show PRN', patient_history_prns_path(@patient, history), :class => "btn btn-primary"
            %td= link_to 'Edit', edit_patient_history_path(@patient, history), :class => "btn btn-primary"
            %td= link_to 'Destroy', history, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-primary"

    %br
    .col-md-8.well
      = link_to 'New History', new_patient_history_path, :class => "btn btn-primary"
