-# #editor
-# = hidden_field :sketch, :data

.col-md-4
  = f.input :brisk, collection: 2..9, prompt: "Select value"
.col-md-4
  = f.input :sluggish, collection: 2..9, prompt: "Select value"
.col-md-4
  = f.input :fixed, collection: 2..9, prompt: "Select value"
.col-md-4
  = f.input :size, collection: 2..9, prompt: "Select value"

.col-md-12
  = f.input :glasgow_coma_score_quality, :collection => [['alert', 'Alert'], ['lethargic', 'Lethargic'], ['confused', 'Confused'], ['follows commands', 'Follows Commands'], ['comatose', 'Comatose'], ['sedated', 'Sedated'], ['unable to assess', 'Unable to Asses']], :label_method => :last, :value_method => :first, :as => :check_boxes, :item_wrapper_class => 'inline', :checked => true, :class => "form-control"

.col-md-12
  = f.input :gag_reflex, :collection => [['present', 'Present'], ['absent', 'Absent']], :label_method => :last, :value_method => :first, :as => :radio_buttons, :item_wrapper_class => 'inline', :checked => true, :class => "form-control"

.col-md-12
  = f.input :speech, :collection => [['clear', 'Clear'], ['slurred', 'Slurred'], ['no response', 'No Response'], ['inappropriate', 'Inappropriate'], ['incomprehensible', 'Incomprehensible'], ['aphasic', 'Aphasic'], ['ett/trach', 'ETT/Trach']], :label_method => :last, :value_method => :first, :as => :check_boxes, :item_wrapper_class => 'inline', :checked => true, :class => "form-control"

.col-md-12
  = f.input :hearing, :collection => [['no obvious deficit', 'No Obvious Deficit'], ['hoh', 'HOH'], ['unable to assess', 'Unable to Assess'], ['deaf', 'Deaf']], :label_method => :last, :value_method => :first, :as => :radio_buttons, :item_wrapper_class => 'inline', :checked => true, :class => "form-control"

.col-md-12
  = f.input :face, :collection => [['symmetrical', 'Symmetrical'], ['asymmetrical', 'Asymmetrical'], ['r', 'R'], ['l', 'L']], :label_method => :last, :value_method => :first, :as => :radio_buttons, :item_wrapper_class => 'inline', :checked => true, :class => "form-control"

.col-md-12
  = f.input :tongue, :collection => [['midline', 'Midline'], ['r', 'R'], ['l', 'L']], :label_method => :last, :value_method => :first, :as => :radio_buttons, :item_wrapper_class => 'inline', :checked => true, :class => "form-control"




