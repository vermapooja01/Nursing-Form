%h1 New submission

.wizard#nursing-form-wizard{"data-title" => "New Nursing Entry"}
  = simple_form_for @submission, html: {class: 'form-horizontal'} do |f|
    -# Basic Information Wizard Card
    .wizard-card.nursing-form-card{"data-cardname" => "Page 1"}
      %h3 Basic Information
      .form-group.form-group-lg
        -# = f.hidden_field :user_id, :value => current_user.id
        .col-md-3
          = f.input :patient_initials
          = f.input :age
          = f.input :gender
          = f.input :admitting_primary_medical_diagnosis
        -# Selection of week
        .form-group
          .row
            .col-md-8
              #datetime-picker

    -# Nurological Muscular Wizard Card
    .wizard-card.nursing-form-card{"data-cardname" => "Page 2"}
      %h3 Neurological/Muscular
      .form-group
        = render :partial => "submissions/partials/neurological_muscular", :locals => {:f => f}

    .wizard-card.nursing-form-card{"data-cardname" => "Page 3"}
      %h3 Psychosocial
      .form-group
        = render :partial => "submissions/partials/psychosocial", :locals => {:f => f}


    .wizard-card.nursing-form-card{"data-cardname" => "Page 4"}
      %h3 Respiratory/O2 Therapy
      .form-group
        = render :partial => "submissions/partials/respiratory_o2therapy", :locals => {:f => f}


    .wizard-card.nursing-form-card{"data-cardname" => "Page 5"}
      %h3 Cardiovascular
      .form-group
        = render :partial => "submissions/partials/cardiovascular", :locals => {:f => f}


    .wizard-card.nursing-form-card{"data-cardname" => "Page 6"}
      %h3 Gastrointestinal
      .form-group
        = render :partial => "submissions/partials/gastrointestinal", :locals => {:f => f}


    .wizard-card.nursing-form-card{"data-cardname" => "Page 7"}
      %h3 Nutrition
      .form-group
        = render :partial => "submissions/partials/nutrition", :locals => {:f => f}



    .wizard-card.nursing-form-card{"data-cardname" => "Page 8"}
      %h3 Skin/Mucuous Membranes
      .form-group
        = render :partial => "submissions/partials/skin_mucuous_membrane", :locals => {:f => f}


    .wizard-card.nursing-form-card{"data-cardname" => "Page 9"}
      %h3 IV Therapy
      .form-group
        = render :partial => "submissions/partials/iv_therapy", :locals => {:f => f}



    .wizard-card.nursing-form-card{"data-cardname" => "Page 10"}
