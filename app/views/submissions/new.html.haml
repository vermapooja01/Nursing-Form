  .col-md-10
    = simple_form_for @submission, html: {class: 'form-horizontal'} do |f|
      .tab-content
        %ul.pager.wizard
          %li.previous.first{:style => "display:none;"}
            %a{:href => "#"} First
          %li.previous
            %a{:href => "#"} Previous
          %li.next.last{:style => "display:none;"}
            %a{:href => "#"} Last
          %li.next
            %a{:href => "#"} Next

        #a.tab-pane.active
          %h3 Basic Information
          .form-group.form-group-lg
            .row
              -# = f.hidden_field :user_id, :value => current_user.id
              .col-md-3
                = f.input :patient_initials
                = f.input :age
                = f.input :gender
                = f.input :admitting_primary_medical_diagnosis
              -# Selection of week
              .col-md-8
                #datetime-picker

        #b.tab-pane
          %h3 Neurological/Muscular
          .form-group
            = render :partial => "submissions/partials/neurological_muscular", :locals => {:f => f}

        #c.tab-pane
