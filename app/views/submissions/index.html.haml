= flash_messages
%h1
  Welcome
  = current_user.first_name
  !
%hr
%h3 In-Progress
- if !current_user.submissions.empty?
  %p You have the following submissions in progress:

%h3 Completed Forms
%p Completed forms

%table
  %thead
    %tr
      %th Patient initials
      %th Age
      %th Gender
      %th Admitting primary medical diagnosis
      %th User
      %th Week
      %th
      %th
      %th

  %tbody
    - @submissions.each do |submission|
      %tr
        %td= submission.patient_initials
        %td= submission.age
        %td= submission.gender
        %td= submission.admitting_primary_medical_diagnosis
        %td= submission.user_id
        %td= submission.week
        %td= link_to 'Show', submission
        %td= link_to 'Edit', edit_submission_path(submission)
        %td= link_to 'Destroy', submission, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Submission', new_submission_path
