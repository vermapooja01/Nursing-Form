.admin-page-wrapper

  .col-md-8.history-information
    = render "layouts/admin/patient_menu", :patient => @patient, :history => @history
    %hr
    %h1 PRNs
    = link_to 'Add PRN +', new_admin_patient_history_prn_url(@patient, @history), class: "btn btn-success"
    %hr
    %table.table.table-striped.datatable
      %thead
        %tr
          %th Date Ordered
          %th Ordering M.D
          %th

      %tbody
        - @prns.each do |prn|
          %tr
            %th= prn.date_ordered
            %td= prn.ordering_md
            %td
              = link_to 'View', admin_patient_history_prn_path(@patient, @history, prn), :class => "btn btn-default btn-xs"
              = link_to 'Edit', edit_admin_patient_history_prn_path(@patient, @history, prn), :class => "btn btn-default btn-xs"

  .col-md-4.information-block
    %h2 Patient Details
    = render "admin/patient_block"
