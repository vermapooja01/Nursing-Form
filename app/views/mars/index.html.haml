.row
  .col-md-8.history-information
    = render "layouts/patient_menu", :patient => @patient, :history => @history
    %hr
  .col-md-4.information-block
    %h2 Patient Details
    = render "admin/patient_block"
.row
  .col-xs-4.text-center
    %h3 Upper Rio Grande Regional Simulation Hospital
  .col-xs-8
    %h3 Medication Administration Record (MAR)
    .row
      .col-xs-4
        %p Name: #{@patient.name}
        %p Month: May
      .col-xs-4
        %p &nbsp;
        %p Year: 2017
      .col-xs-4
        %p MR#: 123456789
        %p
          Allergies:
          %span.allergies
            None
- 3.times do |d|
  .row.mar{style: "margin:5px 0;"}
    .col-xs-2 Medication
    .col-xs-10
      .col-xs-12
        .col-xs-1 First
        .col-xs-11
          - 31.times do |d|
            .mar-item{style: "float:left;width:3.22%;height:20px;background-color:#ff7d23;font-size:8px;text-align:center;padding-top: 5px;"}GV
      .col-xs-12
        .col-xs-1 Second
        .col-xs-11
          - 31.times do |d|
            .mar-item{style: "float:left;width:3.22%;height:20px;background-color:#041b3c;"}

