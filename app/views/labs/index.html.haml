%h1 Listing labs

.col-md-8.well
  .table-responsive
    %table.table-hover.completed-table
      %thead
        %tr
          %th Orders
          %th Date and time drawn
          %th
          %th
          %th

      %tbody
        - @labs.each do |lab|
          %tr
            %td= lab.orders
            %td= lab.date_and_time_drawn
            %td= link_to 'Show', patient_history_lab_path(@patient, @history, lab), :class => "btn btn-primary"
            %td= link_to 'Edit', edit_patient_history_lab_path(@patient, @history, lab), :class => "btn btn-primary"
            %td= link_to 'Destroy', patient_history_lab_path(@patient, @history, lab), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-primary"

    %br
    .col-md-8.well
      -#= link_to 'New Lab', new_patient_history_lab_path, :class => "btn btn-primary"
      = link_to 'New Lab', new_patient_history_lab_path, :class => "btn btn-primary"
